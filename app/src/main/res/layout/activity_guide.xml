<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".entrance.guide.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guideActivity_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/experience_tv"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:text="立即体验"
        app:layout_constraintBottom_toTopOf="@+id/guideActivity_ll_points"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/bt_bg_style" />

    <LinearLayout
        android:id="@+id/guideActivity_ll_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></LinearLayout>
</android.support.constraint.ConstraintLayout>