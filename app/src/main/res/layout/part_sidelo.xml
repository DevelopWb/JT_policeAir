<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:id="@+id/part_side_view"
    android:layout_height="match_parent"
    android:background="#D8DDEB">

    <TextView
        android:id="@+id/dl_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#D1D4DF"
        android:paddingLeft="10dp"
        android:text="部件分类" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@id/dl_tv"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/jinggai_iv"
                android:layout_centerVertical="true"
                android:src="@drawable/jinggai_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="井盖分布"
                android:id="@+id/jinggai_tv"
                android:layout_toRightOf="@id/jinggai_iv"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/jinggai_switch"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/jinggai_tv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/xiaofangshuan_icon"
                android:id="@+id/xiaofangshuan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="消防栓分布"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/xiaofangshuan_tv"
                android:layout_toRightOf="@id/xiaofangshuan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/xiaofangshuan_switch"
                android:layout_toRightOf="@id/xiaofangshuan_tv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>