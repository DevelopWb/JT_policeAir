<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_page.law_case.PublishCaseActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/push_case_nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_gray_square_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_title_style"
                        android:gravity="center_vertical"
                        android:text="案件地点"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/address_tv"
                        style="@style/publish_input_tv_style"
                        android:gravity="center_vertical"
                        android:paddingLeft="0dp"
                        android:paddingRight="15dp"
                        android:hint="请选择地点" />
                </LinearLayout>

                <View style="@style/divider_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_title_style"
                        android:gravity="center_vertical"
                        android:text="案件时间"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/date_tv"
                        style="@style/publish_input_tv_style"
                        android:gravity="center_vertical"
                        android:paddingLeft="0dp"
                        android:paddingRight="15dp"
                        android:hint="请选择时间" />
                </LinearLayout>
                <View style="@style/divider_style" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_title_style"
                        android:gravity="center_vertical"
                        android:text="案件类型"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/type_tv"
                        style="@style/publish_input_tv_style"
                        android:gravity="center_vertical"
                        android:paddingLeft="0dp"
                        android:hint="请选择类型" />
                </LinearLayout>

                <View style="@style/divider_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_title_style"
                        android:gravity="center_vertical"
                        android:text="案件种类"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/kind_tv"
                        style="@style/publish_input_tv_style"
                        android:gravity="center_vertical"
                        android:paddingLeft="0dp"
                        android:hint="请选择种类" />
                </LinearLayout>

                <View style="@style/divider_style" />

                <EditText
                    android:id="@+id/description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="请输入描述信息"
                    android:maxLength="200"
                    android:minLines="5"
                    android:padding="10dp"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/input_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="已输入0/200"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />
            </LinearLayout>

            <include layout="@layout/select_photo_vedio_ll"></include>

            <TextView
                android:id="@+id/ok_tv"
                style="@style/bt_bg_style"
                android:layout_gravity="bottom"
                android:layout_margin="20dp"
                android:text="确认" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>