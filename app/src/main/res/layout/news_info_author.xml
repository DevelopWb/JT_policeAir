<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <ImageView
        android:id="@+id/info_user_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/my_hint_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/info_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="15dp"
        android:hint="匿名"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/info_time_read"
        app:layout_constraintLeft_toRightOf="@+id/info_user_image"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/info_time_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text=""
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/info_user_image"
        android:layout_alignBottom="@+id/info_user_image"
        app:layout_constraintTop_toBottomOf="@+id/info_user_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/info_user_name"/>

    <TextView
        android:id="@+id/info_guanzhu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:includeFontPadding="false"
        android:background="@drawable/news_btn_bg_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>