            <!--android:text="城市热力图分布" />-->

            <!--<Switch-->
            <!--android:id="@+id/relitukaiguan"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_gravity="center" />-->

            <!--</TableRow>-->

            <RelativeLayout
                android:id="@+id/relitubuju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dituleixingbuju">

                <ImageView
                    android:id="@+id/heaticon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/heatmap" />

                <TextView
                    android:id="@+id/heatmaptv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/heaticon"
                    android:paddingLeft="10dp"
                    android:text="城市热力图分布" />

                <Switch
                    android:id="@+id/relitukaiguan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lukuangbuju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relitubuju"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/roadstatus_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:paddingLeft="7dp"
                    android:src="@drawable/road_status" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/roadstatus_icon"
                    android:layout_weight="4"
                    android:paddingLeft="10dp"
                    android:text="城市路况图" />

                <Switch
                    android:id="@+id/lukuangtukaiguan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:id="@+id/distance_util_btn"
                android:layout_height="wrap_content"
                android:background="@drawable/search_edit_bg"
                android:layout_below="@id/lukuangbuju"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/distanceutil_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:paddingLeft="7dp"
                    android:src="@drawable/mapdistanceutil" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/distanceutil_icon"
                    android:paddingLeft="10dp"
                    android:text="地图测距" />

                <Switch
                    android:id="@+id/map_distanceutil"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone">
                <Button
                    android:id="@+id/test1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:text="test1" />

                <Button
                    android:id="@+id/test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test1"
                    android:layout_alignTop="@id/test1"
                    android:layout_toRightOf="@id/test1"
                    android:text="test2" />

                <Button
                    android:id="@+id/distance_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test1"
                    android:text="测距" />

                <Button
                    android:id="@+id/area_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/distance_switch"
                    android:text="测面积" />
            </RelativeLayout>
        </TableLayout>
    </RelativeLayout>
