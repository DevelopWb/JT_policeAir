<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/item_car_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_car_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/item_car_image"
        android:layout_toLeftOf="@+id/item_car_right"/>
    <TextView
        android:id="@+id/item_car_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2019-03-17  00:00:00"
        android:layout_below="@+id/item_car_title"
        android:layout_toRightOf="@+id/item_car_image"/>

    <TextView
        android:id="@+id/item_car_right"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="ç±³"
        android:background="@drawable/bg_btn_theme"/>
</RelativeLayout>