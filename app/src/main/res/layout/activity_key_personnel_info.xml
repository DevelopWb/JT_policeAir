<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_gray_line">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/key_personnel_detail_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxHeight="165dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/background2">
        <View
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:background="@color/colorAccent" />
        <TextView
            style="@style/item_title_style"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="走访记录"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/interview_btn"
            style="@style/bt_small_button_style"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="走访"
            android:textSize="14dp" />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>