<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_news_publish_rectangle">

                <ImageView
                    android:id="@+id/add_tag"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:src="@mipmap/news_video_add"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/video_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/video_tag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/news_video_tag"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_news_publish_rectangle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/item_title_style"
                    android:gravity="center_vertical"
                    android:text="标题："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/title_et"
                    android:background="@null"
                    style="@style/publish_input_tv_style"
                    android:gravity="center_vertical"
                    android:hint="起一个吸引人的名称让更多人看到哟"
                    android:textSize="14dp"
                    android:paddingLeft="0dp"
                    android:maxLength="30"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_news_publish_rectangle"
                android:layout_marginBottom="10dp">

                <TextView
                    style="@style/item_title_style"
                    android:gravity="center_vertical"
                    android:text="位置："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/address_tv"
                    style="@style/publish_input_tv_style"
                    android:gravity="center_vertical"
                    android:hint="请选择发布位置"
                    android:textSize="14dp"
                    android:paddingLeft="0dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_news_publish_rectangle"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLength="500"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:hint="简单介绍下视频吧"
                    android:padding="10dp"
                    android:minLines="5"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/limit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已输入0/500"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:alpha="0.4"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/operation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/yulan_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="预览"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_blue_round"/>
        <TextView
            android:id="@+id/fabu_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:text="发布"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_blue_round"/>
    </LinearLayout>

</LinearLayout>