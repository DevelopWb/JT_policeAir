<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.juntai.wisdom.video.Jzvd.MyJzvdStd
            android:id="@+id/info_video"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@mipmap/playview_icon_back_nor"/>
    </RelativeLayout>
    <include layout="@layout/news_info_author"/>
    <View style="@style/divider_light_style"
        android:id="@+id/parting_line"
        android:visibility="gone"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/info_smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/info_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/content_tag"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <View
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        tools:ignore="MissingConstraints"
                        android:background="@color/colorAccent"/>
                    <TextView
                        style="@style/item_title_style"
                        android:text="简介"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/info_content"
                    style="@style/news_content_style"
                    android:focusable="false"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="@color/text_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <View
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        tools:ignore="MissingConstraints"
                        android:background="@color/colorAccent"/>
                    <TextView
                        style="@style/item_title_style"
                        android:text="评论"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/info_comment_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <View style="@style/divider_light_style"/>
    <include layout="@layout/news_info_comment"/>
</LinearLayout>