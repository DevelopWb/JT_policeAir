<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popwindow2">

    <RelativeLayout
        android:id="@+id/pop_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/car_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/drone_img" />

        <TextView
            android:id="@+id/drone_infos"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:layout_toRightOf="@id/car_img"
            android:layout_alignTop="@id/car_img"
            android:singleLine="false"
            android:text="@string/entity_info"
            android:textColor="@color/black" />
    </RelativeLayout>

    <Button
        android:id="@+id/drone_video"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="实时视频"
        android:elevation="@dimen/dp_10"
        android:layout_below="@id/pop_top"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_blue_round"
        android:textColor="@color/white" />
</RelativeLayout>