<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_comment_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/my_hint_head"/>
        <LinearLayout
            android:id="@+id/item_comment_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_comment_user_image"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item_comment_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="15dp"
                android:text="名字"
                android:textColor="@color/colorAccent" />
            <ImageView
                android:id="@+id/item_comment_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/info_like_bg_selector"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/item_comment_like_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:maxLength="5"
                android:minWidth="30dp"
                android:text="赞"
                android:textSize="12dp"
                android:textColor="@color/text_content"
                android:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:text="内容"
            android:layout_toRightOf="@+id/item_comment_user_image"
            android:layout_below="@+id/item_comment_top"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_comment_iv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="5dp"
        android:layout_marginLeft="50dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_guide_news"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp">
        <TextView
            android:id="@+id/item_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="11dp"
            android:text="2020-02-23  10:52"
            android:textColor="@color/text_content"/>

        <TextView
            android:id="@+id/item_comment_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="回复ta"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_comment_child1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/child1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="子评论"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/child1_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="："
            android:textColor="@color/text_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/child1_name"
            app:layout_constraintBottom_toTopOf="@+id/child1_iv"/>

        <ImageView
            android:id="@+id/child1_iv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_guide_news"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/child1_name"
            app:layout_constraintTop_toBottomOf="@+id/child1_name"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_comment_child2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/child2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text=""
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/child2_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text=""
            android:textColor="@color/text_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/child2_name"
            app:layout_constraintBottom_toTopOf="@+id/child2_iv"/>

        <ImageView
            android:id="@+id/child2_iv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_guide_news"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/child2_name"
            app:layout_constraintTop_toBottomOf="@+id/child2_name"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/item_comment_user_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="13dp"
        android:visibility="gone"
        android:text="更多"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="50dp"/>
</LinearLayout>