<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/info_smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/info_title_tv"
                    style="@style/news_title_style"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <ImageView
                        android:id="@+id/info_user_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="20dp"
                        android:src="@mipmap/news_deafult_head_icon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/info_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="14dp"
                        android:hint="匿名"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/info_time_read"
                        app:layout_constraintLeft_toRightOf="@+id/info_user_image"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/info_time_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/info_user_image"
                        android:layout_alignBottom="@+id/info_user_image"
                        app:layout_constraintTop_toBottomOf="@+id/info_user_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/info_user_name"/>

                    <TextView
                        android:id="@+id/info_guanzhu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:includeFontPadding="false"
                        android:background="@drawable/news_btn_bg_blue"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="invisible"/>
                </android.support.constraint.ConstraintLayout>
                <FrameLayout
                    android:id="@+id/web_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="WebViewLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <View
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        tools:ignore="MissingConstraints"
                        android:background="@color/colorAccent"/>
                    <TextView
                        style="@style/item_title_style"
                        android:text="评论"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/info_comment_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <View style="@style/divider_light_style"/>
    <include layout="@layout/news_info_comment"/>
</LinearLayout>